<?xml version="1.0" encoding="UTF-8"?>
<project name="module_baidumap" default="compile.module.baidumap">
  <dirname property="module.baidumap.basedir" file="${ant.file.module_baidumap}"/>
  
  <property name="module.jdk.home.baidumap" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.baidumap" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.baidumap" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.baidumap" value="-encoding UTF-8 -source 7 -target 7 ${compiler.args}"/>
  
  <property name="baidumap.output.dir" value="${module.baidumap.basedir}/build/classes/production/BaiduMap"/>
  <property name="baidumap.testoutput.dir" value="${module.baidumap.basedir}/build/classes/test/BaiduMap"/>
  
  <path id="baidumap.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="baidumap.module.production.classpath">
    <path refid="${module.jdk.classpath.baidumap}"/>
  </path>
  
  <path id="baidumap.runtime.production.module.classpath">
    <pathelement location="${baidumap.output.dir}"/>
  </path>
  
  <path id="baidumap.module.classpath">
    <path refid="${module.jdk.classpath.baidumap}"/>
    <pathelement location="${baidumap.output.dir}"/>
  </path>
  
  <path id="baidumap.runtime.module.classpath">
    <pathelement location="${baidumap.testoutput.dir}"/>
    <pathelement location="${baidumap.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.baidumap">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.baidumap">
    <patternset refid="excluded.from.module.baidumap"/>
  </patternset>
  
  
  <target name="compile.module.baidumap" depends="compile.module.baidumap.production,compile.module.baidumap.tests" description="Compile module BaiduMap"/>
  
  <target name="compile.module.baidumap.production" depends="register.custom.compilers" description="Compile module BaiduMap; production classes"/>
  
  <target name="compile.module.baidumap.tests" depends="register.custom.compilers,compile.module.baidumap.production" description="compile module BaiduMap; test classes" unless="skip.tests"/>
  
  <target name="clean.module.baidumap" description="cleanup module">
    <delete dir="${baidumap.output.dir}"/>
    <delete dir="${baidumap.testoutput.dir}"/>
  </target>
</project>